<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.gmi.gwaswebapp.client.mvp.result.details.SNPPopup.MyStyle">
		.popup  {
			color: white;
			border-radius: 5px;
			-moz-border-radius: 5px;
			-webkit-border-radius: 5px;
			font-size: 100%;
			background: #C8CCD0;
			font-weight: bold;
			opacity: 0.9;
			line-height:1.3;
			-webkit-transition: color 2s linear;
    		-moz-transition: color 2s linear;
		}
		
		.popup_content {
			margin: 10px 10px 10px 10px;
		}
		
		.popup p{
			font-size:15px;
		}
		.actionLink {
		 cursor:pointer;	
		}
		
		
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.popup_content}">
		<ul>
			<li>
				<g:Anchor ui:field="run_step_wise_link" text="Run Step-Wise GWAS" addStyleNames="{style.actionLink}"></g:Anchor>
			</li>
		</ul>
	</g:HTMLPanel>
</ui:UiBinder> 